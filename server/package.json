{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "codegen": "rm -r -f ./src/domain/generated && rm -r -f ../client/src/api/generated && graphql-codegen",
    "test": "npm run test:arch",
    "test:arch": "depcruise --config .dependency-cruiser.js src",
    "deps": "dependency-cruise -T dot -v -- src/index.ts | dot -T svg > ./doc/generated/dependencygraph.svg",
    "lint": "npm run lint:eslint && npm run lint:graphql",
    "lint:eslint": "eslint \"**/*.+(ts|graphql)\"",
    "lint:graphql": "graphql-schema-linter --except relay-page-info-spec"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@graphql-tools/graphql-file-loader": "^7.5.9",
    "@graphql-tools/load": "^7.8.4",
    "@graphql-tools/schema": "^9.0.8",
    "apollo-server": "^3.11.1",
    "dotenv": "^16.0.3",
    "graphql": "^16.6.0",
    "graphql-schema-linter": "^3.0.1",
    "mongodb": "^4.11.0",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.7.0",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.13.11",
    "@graphql-codegen/typescript": "^2.8.1",
    "@graphql-codegen/typescript-apollo-client-helpers": "^2.2.6",
    "@graphql-codegen/typescript-graphql-files-modules": "^2.2.1",
    "@graphql-codegen/typescript-mongodb": "^2.4.6",
    "@graphql-codegen/typescript-operations": "^2.5.6",
    "@graphql-codegen/typescript-react-apollo": "^3.3.6",
    "@graphql-codegen/typescript-react-query": "^4.0.5",
    "@graphql-codegen/typescript-resolvers": "^2.7.6",
    "@graphql-eslint/eslint-plugin": "^3.13.1",
    "@types/node": "^18.11.9",
    "@types/yargs": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "dependency-cruiser": "^11.18.0",
    "eslint": "^8.27.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.1",
    "typescript": "^4.8.4"
  }
}
