{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "codegen": "rm -r -f ./src/domain/generated && rm -r -f ../client/src/api/generated && graphql-codegen",
    "test": "npm run test:arch",
    "test:arch": "depcruise --config .dependency-cruiser.js src",
    "deps": "dependency-cruise -T dot -v -- src/index.ts | dot -T svg > ./doc/generated/dependencygraph.svg",
    "lint": "npm run lint:eslint && npm run lint:graphql",
    "lint:eslint": "eslint \"**/*.+(ts|graphql)\"",
    "lint:graphql": "graphql-schema-linter --except relay-page-info-spec"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@graphql-tools/graphql-file-loader": "^7.3.3",
    "@graphql-tools/load": "^7.5.1",
    "@graphql-tools/schema": "^8.3.1",
    "apollo-server": "^3.6.1",
    "graphql": "^16.2.0",
    "graphql-schema-linter": "^2.0.1",
    "yargs": "^17.3.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.3.1",
    "@graphql-codegen/typescript": "^2.4.2",
    "@graphql-codegen/typescript-apollo-client-helpers": "^2.1.9",
    "@graphql-codegen/typescript-graphql-files-modules": "^2.1.1",
    "@graphql-codegen/typescript-mongodb": "^2.3.0",
    "@graphql-codegen/typescript-operations": "^2.2.2",
    "@graphql-codegen/typescript-react-apollo": "^3.2.3",
    "@graphql-codegen/typescript-react-query": "^3.3.0",
    "@graphql-codegen/typescript-resolvers": "^2.4.3",
    "@graphql-eslint/eslint-plugin": "^3.6.0",
    "@types/node": "^17.0.8",
    "@types/yargs": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "dependency-cruiser": "^11.2.1",
    "eslint": "^8.7.0",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4"
  }
}
